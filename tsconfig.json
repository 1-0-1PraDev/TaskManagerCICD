{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmit": true, // Prevents emitting output files
    "allowImportingTsExtensions": true, // Add this to allow importing .ts/.tsx extensions
    "jsx": "react-jsx",
    "strict": true,
    "types": ["jest", "@testing-library/jest-dom"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "jest.setup.ts"],
  "exclude": ["node_modules"]
}
